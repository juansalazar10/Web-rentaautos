rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Reservas: los clientes no deben poder crear/editar directamente desde el cliente.
    // Las creaciones deben hacerse mediante la Cloud Function que valida disponibilidad.
    match /reservations/{resId} {
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
      allow list: if request.auth != null; // allow listing but client-side should filter by userId
      allow create: if false;
      allow update, delete: if false;
    }

    // Otras colecciones públicas (si las hubiera) pueden agregarse aquí.
  }
}
